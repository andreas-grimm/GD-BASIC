#!/bin/sh
tput clear
VERSION=0.0.6

echo "--- Jasic Regression Test ---"
java -jar target/BASIC-$VERSION-SNAPSHOT-jar-with-dependencies.jar -b=jasic -i src/test/resources/test_jasic_1.jas

echo "--- Basic Regression Test ---"
echo "Test run: src/test/resources/test_basic_jasic_1_recoded.bas"
java -jar target/BASIC-$VERSION-SNAPSHOT-jar-with-dependencies.jar -i src/test/resources/test_basic_jasic_1_recoded.bas
read -p "Press any [enter] to resume ..."

echo "Test run: src/test/resources/test_basic1_Q1_dev.bas"
java -jar target/BASIC-$VERSION-SNAPSHOT-jar-with-dependencies.jar -i src/test/resources/test_basic_Q1_dev.bas
read -p "Press any [enter] to resume ..."

echo "Test run: src/test/resources/test_basic1_Q2_dev.bas"
java -jar target/BASIC-$VERSION-SNAPSHOT-jar-with-dependencies.jar -i src/test/resources/test_basic_Q2_dev.bas
read -p "Press any [enter] to resume ..."

echo "Test run: src/test/resources/test_basic1_Q2_1_dev.bas"
java -jar target/BASIC-$VERSION-SNAPSHOT-jar-with-dependencies.jar -i src/test/resources/test_basic_Q2_1_dev.bas
read -p "Press any [enter] to resume ..."

echo "Test run: src/test/resources/test_basic1_Q2_2_dev.bas"
java -jar target/BASIC-0.0.6-SNAPSHOT-jar-with-dependencies.jar -i src/test/resources/test_basic_Q2_2_dev.bas
read -p "Press any [enter] to resume ..."
